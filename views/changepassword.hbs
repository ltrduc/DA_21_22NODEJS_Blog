<div class="background wrapper">
    <div class="form-changepassword fadeInDown">
        <div id="formContent">
            <!-- Tabs Titles -->

            <!-- Icon -->
            <div class="fadeIn first">
                <img class="w-25 p-3" src="/images/Member-img/logo.png" id="icon" alt="User Icon" />
            </div>

            <!-- Login Form -->
            <form method="POST" action="/users/changepassword">
                <div class="login-box">
                    <input name="old_password" type="password" id="password" class="fadeIn third"
                        placeholder="Mật khẩu cũ">
                    <input name="new_password_1" type="password" id="password" class="fadeIn third"
                        placeholder="Mật khẩu mới">
                    <input name="new_password_2" type="password" id="password" class="fadeIn third"
                        placeholder="Nhập lại mật khẩu mới">
                </div>

                <input type="submit" class="fadeIn fourth mb-3" value="Change password">
                <input style="background-color: red !important" type="button" onclick="location.href='/'; " class="fadeIn fourth mt-0" value="Back">

                {{#if msg}}
                <div class="form-group">
                    <div class="mx-auto w-75 alert alert-danger alert-dismissible fade show">
                        <button type="button" class="close" data-dismiss="alert">&times;</button>
                        {{msg}}
                    </div>
                </div>
                {{/if}}

                {{#if msgSuccess}}
                <div class="form-group">
                    <div class="mx-auto w-75 alert alert-success alert-dismissible fade show">
                        <button type="button" class="close" data-dismiss="alert">&times;</button>
                        {{msgSuccess}}
                    </div>
                </div>
                {{/if}}
            </form>


