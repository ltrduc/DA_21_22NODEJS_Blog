    <script>
        $(document).ready(function () {
            $('.form-register').hide();
            $('.form-forgotpassword').hide();
            $('.register-btn').click(function () {
                $('.form-login').hide();
                $('.form-register').fadeIn();
                $('#login').focus();
            })

            $('.login-btn').click(function () {
                $('.form-register').hide();
                $('.form-login').fadeIn();
                $('#username').focus();
            })

            $('.forgotpassword-btn').click(function () {
                $('.form-register').hide();
                $('.form-login').hide();
                $('.form-forgotpassword').fadeIn();
            })
        })
    </script>


